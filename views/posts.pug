head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  link(rel='icon' href='/assets/images/logo.png')
  title CloudGuide BizTech Foundation blog
  meta(property='og:title' content='CloudGuide BizTech Foundation blog')
  meta(property='og:locale' content='nl_NL')
  meta(name='description' content='CloudGuide blog op het raakvlak tussen organisatie-ontwerp en technologie')
  meta(property='og:description' content='CloudGuide blog op het raakvlak tussen organisatie-ontwerp en technologie')
  meta(property='og:site_name' content='CloudGuide BizTech Foundation blog')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
