doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  title= config.content.title
  meta(property='og:title' content= config.content.title)
  meta(property='og:locale' content= config.content.language)
  meta(name='description' content= config.content.subject)
  meta(property='og:description' content= config.content.subject)
  meta(property='og:site_name' content= config.content.title)

  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
  link(href='/assets/css/screen.css' rel='stylesheet')
  link(href='/assets/css/main.css' rel='stylesheet')
  script(src='/assets/js/jquery.min.js')
  script(defer='' src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon!= `{'token': '${config.plausibleDomain}'}`)

// defer loading of font and font awesome
noscript#deferred-styles
  link(href='https://fonts.googleapis.com/css?family=Righteous%7CMerriweather:300,300i,400,400i,700,700i' rel='stylesheet')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.0.13/css/all.css' integrity='sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp' crossorigin='anonymous')

include menu.pug

.site-content
  .container
    //
      Site Title
      ==================================================

    include site-title.pug

    //
      Content
      ==================================================
    
    .section-title
      h2
        span= config.content.headerRecent
    .row.listrecent

      each post in posts
        .col-md-6.mb-30px
          .listfeaturedtag.h-100
            .row.h-100
              .col-12.col-md-12.col-lg-5.pr-lg-0
                .h-100
                  .wrapthumbnail
                    a(href= post.path)
                      img.featured-box-img-cover(src= post.cover)
              .col-12.col-md-12.col-lg-7
                .h-100.card-group
                  .card
                    .card-body
                      h2.card-title
                        a.text-dark(href= post.path)= post.title
                      h4.card-text(data-toggle="tooltip" data-placement="bottom" title="This content is generated by Notion AI and may not be humanly checked")= post.summary
                    .card-footer.b-0.bg-white.mt-auto
                      .wrapfooter
                        span.meta-footer-thumb
                          img.author-thumb(src=post.author.avatar)
                        span.author-meta
                          span.post-name= post.author.name
                          br
                          span.post-date= post.date
                        span.post-read-more
                          a(href=post.path title='Lees verder')
                            svg.svgIcon-use(width='25' height='25' viewbox='0 0 25 25')
                              path(d='M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z' fill-rule='evenodd')
                        .clearfix


    include alert-bar.pug 


  include footer.pug

script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js' integrity='sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut' crossorigin='anonymous')
script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js' integrity='sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k' crossorigin='anonymous')
script(src='/assets/js/mediumish.js')
script(src='/assets/js/ie10-viewport-bug-workaround.js')
