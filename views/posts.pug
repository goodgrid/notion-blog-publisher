// defer loading of font and font awesome
noscript#deferred-styles
  link(href='https://fonts.googleapis.com/css?family=Righteous%7CMerriweather:300,300i,400,400i,700,700i' rel='stylesheet')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.0.13/css/all.css' integrity='sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp' crossorigin='anonymous')

include menu.pug

.site-content
  .container
    //
      Site Title
      ==================================================

    include site-title.pug

    //
      Content
      ==================================================
    
    .section-title
      h2
        span Recente artikelen
    .row.listrecent

      each post in posts
        .col-md-6.mb-30px
          .listfeaturedtag.h-100
            .row.h-100
              .col-12.col-md-12.col-lg-5.pr-lg-0
                .h-100
                  .wrapthumbnail
                    a(href= encodeURIComponent(post.title))
                      img.featured-box-img-cover(src= post.cover)
              .col-12.col-md-12.col-lg-7
                .h-100.card-group
                  .card
                    .card-body
                      h2.card-title
                        a.text-dark(href= encodeURIComponent(post.title))= post.title
                      h4.card-text= post.summary
                    .card-footer.b-0.bg-white.mt-auto
                      .wrapfooter
                        span.meta-footer-thumb
                          img.author-thumb(src=post.author.avatar)
                        span.author-meta
                          span.post-name= post.author.name
                          br
                          span.post-date= post.date
                        span.post-read-more
                          a(href=encodeURIComponent(post.title) title='Lees verder')
                            svg.svgIcon-use(width='25' height='25' viewbox='0 0 25 25')
                              path(d='M19 6c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v14.66h.012c.01.103.045.204.12.285a.5.5 0 0 0 .706.03L12.5 16.85l5.662 4.126a.508.508 0 0 0 .708-.03.5.5 0 0 0 .118-.285H19V6zm-6.838 9.97L7 19.636V6c0-.55.45-1 1-1h9c.55 0 1 .45 1 1v13.637l-5.162-3.668a.49.49 0 0 0-.676 0z' fill-rule='evenodd')
                        .clearfix


    include alert-bar.pug 
  //
    Categories Jumbotron
    ==================================================
//
  .jumbotron.fortags
    .d-md-flex.h-100
      .col-md-4.transpdark.align-self-center.text-center.h-100
        .d-md-flex.align-items-center.justify-content-center.h-100
          h2.d-md-block.align-self-center.py-1.font-weight-light
            | Explore 
            span.d-none.d-md-inline &rarr;
      .col-md-8.p-5.align-self-center.text-center
        a.mt-1.mb-1(href='/mediumish-theme-jekyll/categories#Jekyll') Jekyll (14)
        a.mt-1.mb-1(href='/mediumish-theme-jekyll/categories#tutorial') tutorial (12)
        a.mt-1.mb-1(href='/mediumish-theme-jekyll/categories#web-development') web development (1)
  =============


  include footer.pug

script(src='/assets/bootstrap-3.4.1-dist/js/bootstrap.min.js')
script(src='/assets/js/mediumish.js')
script(src='/assets/js/ie10-viewport-bug-workaround.js')
